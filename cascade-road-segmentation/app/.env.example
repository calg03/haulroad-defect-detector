# FastAPI Application Configuration

# Application Settings
APP_NAME="Road Defect Segmentation API"
APP_VERSION="1.0.0"
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Model Configuration
ROAD_MODEL_PATH=/app/models/road_segmentation.pth
DEFECT_MODEL_PATH=/app/models/defect_segmentation.pt
ARCHITECTURE=unetplusplus_scse
DEVICE=cuda  # Options: cuda, cpu, or leave empty for auto-detect

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=/tmp/uploads
OUTPUT_DIR=/tmp/outputs
CLEANUP_AFTER_HOURS=24

# Processing Settings
CONFIDENCE_THRESHOLD=0.6
OVERLAY_ALPHA=0.6

# CORS Settings (configure for production)
ALLOWED_ORIGINS=["*"]
ALLOWED_METHODS=["GET", "POST"]
ALLOWED_HEADERS=["*"]

# Security Settings
TRUSTED_HOSTS=["localhost", "127.0.0.1"]

# Monitoring (optional)
ENABLE_METRICS=false
METRICS_PORT=9090